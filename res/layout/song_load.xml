<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/splashme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash_i"
            android:padding="10dp"
            android:layout_margin="30dp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:background="#F88017"
        android:orientation="vertical" >
		
        <RelativeLayout
            android:id="@+id/NextOne"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="#eee"
            android:visibility="gone"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/proceed"
                android:layout_width="200dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:padding="5dp" 
            	android:background="#999"
                android:onClick="StartSinging"               
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/proceed_sing" />

        </RelativeLayout>
	    
		<RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="80dp"
	        android:background="#eee"
	        android:id="@+id/Tracking"
	        android:orientation="horizontal" >
		
		<LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
		    <TextView
	            android:id="@+id/TitleLoad"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:padding="5dp"
	            android:text="@string/songbook_loading"
	            android:textSize="22sp" />
		    
	        <TextView
	            android:id="@+id/countThis"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:padding="5dp"
	            android:text="@string/songbook_loading"
	            android:textSize="18sp" />
	        
		    </LinearLayout>		    
	        
	        <ProgressBar
	            android:id="@+id/songbook_progress"
	            style="?android:attr/progressBarStyleLarge"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:visibility="visible" />
	    </RelativeLayout>
	    
		
    </LinearLayout>

</RelativeLayout>