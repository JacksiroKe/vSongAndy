<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackson_siro.visongbook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.REVEIVE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme"
        android:usesCleartextTraffic="true" >

        <activity android:name=".ui.DdStartPage"></activity>
        <activity
            android:name=".ui.EeBooksView"
            android:label="@string/songs_per_books"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.GgTutorial"
            android:label="@string/how_it_works"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.GgHelpdesk"
            android:label="@string/help_desk"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.DdSermonPad"
            android:label="@string/title_activity_dd_post_song"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.DdSongPad"
            android:label="@string/title_activity_dd_post_song"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.AppStart"
            android:label="@string/app_name"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.EePostView"
            android:label="@string/post_view"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.FfSettings"
            android:label="@string/title_activity_ff_settings"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.FfSettingsProfile"
            android:label="@string/title_activity_ff_settings_profile"
            android:parentActivityName=".ui.FfSettings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.FfSettings" />
        </activity>
        <activity
            android:name=".ui.CcBooksLoad"
            android:label="@string/title_activity_bb_books_load"
            android:theme="@style/MyMaterialTheme.NoActionBar" />
        <activity
            android:name=".ui.CcSongsLoad"
            android:theme="@style/MyMaterialTheme.NoActionBar" />
        <activity
            android:name=".ui.BbUserSignin"
            android:label="@string/title_activity_signin"
            android:logo="@drawable/usericon"
            android:theme="@style/MyMaterialTheme.NoActionBar" />
        <activity
            android:name=".ui.BbUserSignup"
            android:label="@string/title_activity_signup"
            android:logo="@drawable/usericon"
            android:noHistory="true"
            android:theme="@style/MyMaterialTheme.NoActionBar" />
        <activity
            android:name=".ui.DdHomeView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.GgAboutapp"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.FfDonate"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
        <activity
            android:name=".ui.FfUpdates"
            android:parentActivityName=".ui.DdHomeView"
            android:theme="@style/MyMaterialTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jackson_siro.visongbook.ui.DdHomeView" />
        </activity>
    </application>

</manifest>